<t t-name="crm_inventory_ai.AIChat">
    <div class="ai_chat_box">
        <div class="messages">
            <t t-foreach="state.messages" t-as="msg" t-key="msg">
                <div>
                    <strong><t t-esc="msg.from"/>:</strong>
                    <t t-esc="msg.text"/>
                </div>
            </t>
        </div>

        <input t-model="state.input"/>
        <button t-on-click="sendMessage">Enviar</button>
    </div>
</t>

