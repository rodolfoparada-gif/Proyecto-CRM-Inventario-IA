<t t-name="crm_inventory_ai.ChatComponent">
    <div class="ai_chat">

        <button t-on-click="toggle">
            AI
        </button>

        <div t-if="state.open" class="ai_chat_window">

            <div class="messages">
                <t t-foreach="state.messages" t-as="m" t-key="m.text">
                    <div t-att-class="'msg ' + m.from">
                        <t t-esc="m.text"/>
                    </div>
                </t>
            </div>

            <input t-model="state.input"/>
            <button t-on-click="send">Send</button>

        </div>

    </div>
</t>

